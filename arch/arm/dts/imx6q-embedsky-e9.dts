/dts-v1/;

#include <arm/imx6q.dtsi>
#include "imx6q.dtsi"
#include "imx6q-embedsky-e9.dtsi"

/ {
	chosen {
		linux,stdout-path = &uart1;

		environment-mmc1 {
			compatible = "barebox,environment";
			device-path = &environment_mmc1;
			status = "disabled";
		};

		environment-mmc3 {
			compatible = "barebox,environment";
			device-path = &environment_mmc3;
			status = "disabled";
		};

	};
};

&usdhc2 {
	#address-cells = <1>;
	#size-cells = <1>;

	partition@0 {
		label = "barebox";
		reg = <0x0 0x80000>;
	};
	environment_mmc1: partition@80000 {
		label = "barebox-environment";
		reg = <0x80000 0x80000>;
	};
};

&usdhc4 {
	#address-cells = <1>;
	#size-cells = <1>;

	partition@0 {
		label = "barebox";
		reg = <0x0 0x80000>;
	};
	environment_mmc3: partition@80000 {
		label = "barebox-environment";
		reg = <0x80000 0x80000>;
	};
};
