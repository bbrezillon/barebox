 #include <arm/imx6qdl-gw54xx.dtsi>

 / {
	chosen {
		linux,stdout-path = &uart2;

		environment@0 {
			compatible = "barebox,environment";
			device-path = &gpmi, "partname:barebox-environment";
		};
	};
};

&gpmi {
	#address-cells = <1>;
	#size-cells = <1>;

	partition@0 {
		label = "barebox";
		reg = <0x0 0x400000>;
	};

	partition@400000 {
		label = "barebox-environment";
		reg = <0x400000 0x20000>;
	};
};
